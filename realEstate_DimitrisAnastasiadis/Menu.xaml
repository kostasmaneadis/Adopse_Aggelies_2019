<Page x:Class="realEstate_DimitrisAnastasiadis.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:realEstate_DimitrisAnastasiadis"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="newAdButton" Content="Νέα Αγγελία" Background="#ffdb42" Margin="5 15 5 15" Grid.Row="0" Click="newAdButton_Click" />
        <Button Content="Προβολή Αγγελίας" Background="#ffdb42" Margin="5 15 5 15" Grid.Row="1"/>
        <Button Content="Διαγραφή Αγγελίας" Background="#ffdb42" Margin="5 15 5 15" Grid.Row="2"/>
    </Grid>
</Page>
